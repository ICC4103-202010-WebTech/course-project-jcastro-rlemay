<div class="row ml-0 mt-3">
  <h1 class="title">Edit Event</h1>
</div>
<section class="section_wrapper">
  <div class="row ml-0 mt-2">
    <p>Please enter the required information to edit the Event:</p>
  </div>

  <div class="row ml-0">
    <%= form_with model: [:admin, @event] do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :event_banner_picture, "Set Event Banner Picture" %>
        <%= form.file_field :event_banner_picture %>
      </div>
      <div class="form-group">
        <%= form.label :photos, "Set Event Photos" %>
        <%= form.file_field :photos, multiple: true %>
      </div>
      <div class="form-group">
        <%= form.label :videos, "Set Event Videos" %>
        <%= form.file_field :videos, multiple: true %>
      </div>
      <div class="form-group">
        <%= form.label :files, "Set Event Files" %>
        <%= form.file_field :files, multiple: true %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :location %>
        <%= form.text_field :location, class: "form-control" %>
      </div>
      <%= form.fields_for :event_page_attributes do |profile| %>
        <div class="form-group">
          <label for="desc_field"><b>Minimum Guests:</b> </label>
          <%= profile.number_field :minimumGuests, value: @event_page.minimumGuests, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="desc_field"><b>Maximum Guests:</b> </label>
          <%= profile.number_field :maximumGuests, value: @event_page.maximumGuests, class: "form-control" %>
        </div>
      <%end %>
      <div class="form-group">
        <%= radio_button_tag(:is_public, "public", @event.is_public) %>
        <h7>Public</h7><br>
        <%= radio_button_tag(:is_public, "not public", !@event.is_public)%>
        <h7>Private</h7><br>
      </div>
      <div class="form-group">
        <%= form.submit "Edit", class: ["btn", "btn-primary"] %>
      </div>
    <% end %>
  </div>
</section>

