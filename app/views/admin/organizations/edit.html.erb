<div class="row ml-0 mt-3">
  <h2>Edit Organization</h2>
</div>

<div class="row ml-0 mt-2">
  <p>Please enter the required information to edit the Organization:</p>
</div>

<div class="row ml-0">
  <%= form_with model: [:admin, @organization] do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :banner_picture, "Set Banner Picture" %>
      <%= form.file_field :banner_picture %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :description, :placeholder => @profile.description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Edit", class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>
