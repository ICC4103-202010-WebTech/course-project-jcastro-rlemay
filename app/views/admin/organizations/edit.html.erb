<div class="row ml-0 mt-3">
  <h1 class="title">Edit Organization</h1>
</div>
<section class="section_wrapper">
<div class="row ml-0 mt-2">
  <p>Please enter the required information to edit the Organization:</p>
</div>

<div class="row ml-0">
  <%= form_with model: [:admin, @organization] do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <%= form.fields_for :organization_profile_attributes do |profile| %>
      <div class="form-group">
        <%= profile.label :banner_picture, "Set Banner Picture" %>
        <%= profile.file_field :banner_picture %>
      </div>
      <div class="form-group">
        <%= profile.label :description %>
        <%= profile.text_field :description, :placeholder => @profile.description, class: "form-control" %>
      </div>
    <%end %>

    <div class="form-group">
      <%= form.submit "Edit", class: ["btn", "btn-primary"] %>
    </div>
  <% end %>
</div>
</section>
