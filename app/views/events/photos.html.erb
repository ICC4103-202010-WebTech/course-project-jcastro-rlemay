<%= stylesheet_link_tag "event_index" %>

<h1 class="title">Event Photos</h1>
<section class="recent_section">
  <%= form_with(method: "patch" ) do |form| %>
    <div class="form-group">
      <%= form.label :photos, "Upload Event Photos" %>
      <%= form.file_field :photos, multiple: true %>
    </div>
    <div class="form-group">
      <%= form.submit "Upload", class: ["btn", "btn-primary"] %>
    </div>
  <% end %>

  <% if @event_page.photos.attached?  %>
    <% @event_page.photos.each do |photo| %>
      <%= image_tag(photo, width: "200px") %>
    <% end %>
  <% end %>
</section>