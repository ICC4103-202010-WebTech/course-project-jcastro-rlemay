<%= stylesheet_link_tag "event_index" %>

<h1 class="title">Event Videos</h1>
<section class="recent_section">
  <%= form_with(method: "patch" ) do |form| %>
    <div class="form-group">
      <%= form.label :videos, "Upload Event Videos" %>
      <%= form.file_field :videos, multiple: true %>
    </div>
    <div class="form-group">
      <%= form.submit "Upload", class: ["btn", "btn-primary"] %>
    </div>
  <% end %>

  <% if @event_page.videos.attached?  %>
    <% @event_page.videos.each do |video| %>
      <%= video_tag(rails_blob_path(video),:size => "320x240", :controls => true) %>
    <% end %>
  <% end %>
</section>