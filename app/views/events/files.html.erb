<%= stylesheet_link_tag "event_index" %>

<h1 class="title">Event files</h1>
<section class="section_wrapper">
  <section class="recent_section">
    <h1 >Upload:</h1>
    <div class="container ml-10">
      <%= form_with(method: "patch" ) do |form| %>
        <div class="form-group">
          <%= form.label :files, "Upload Event Files" %>
          <%= form.file_field :files, multiple: true %>
        </div>
        <div class="form-group">
          <%= form.submit "Upload", class: ["btn", "btn-primary"] %>
        </div>
      <% end %>
    </div>
    <h1 >Event files uploaded:</h1>
    <div class="container ml-10">
      <% if @event_page.files.attached?  %>
        <% @event_page.files.each do |pdf| %>
          <%= link_to pdf.filename, url_for(pdf) %><br>
        <% end %>
      <% end %>
    </div>
  </section>
</section>