<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "profile.css" %>

<h1 class="profile_title"><%= @organization.name %>'s profile'</h1>
<section class="profile_wrapper">
  <section class="user_image_wrapper">
    <i class="far fa-square fa-10x"></i>
  </section>
  <section class="user_info_wrapper">
    <h1 class="wrapper_title"></h1>
    <p><b><%= @organization.name %>'s description:</b> </p>
    <p><%= @profile.description %></p>
  </section>
  <section class="user_options_wrapper">
    <a> Report </a>
    <a> View users </a>
    <a> View Events </a>
  </section>
</section>

<h1 class="profile_title">Your Created events</h1>
<% @organization_events.each do |event| %>
  <section class="user_events_wrapper">
    <section class="events_upper">

    </section>
    <section class="events_details">
      <i class="far fa-square fa-8x"></i>
      <section class="event_text">
        <h3><%= link_to event.event.name, event_path(event.id) %></h3>
        <%= event.event.description %>
      </section>
    </section>
    <section class="events_down">

    </section>
  </section>
<% end %>