<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "profile.css" %>

<h1 class="profile_title">Your Profile</h1>
<section class="profile_wrapper">
  <section class="user_image_wrapper">
    <i class="far fa-square fa-10x"></i>
  </section>
  <section class="user_info_wrapper">
    <h1 class="wrapper_title"><%= @user.name %>  <%= @user.lastName %></h1>
    <p>
    <ul>
      <li><b><%= @user.name %>'s bio:</b> <%= @profile.bio %></li>
      <li><b>Email:</b> <%= @user.email %></li>
      <li><b>Location:</b> <%= @user.location %></li>
      <li><b>Address:</b> <%= @user.address %></li>
      <li><b>Phone:</b> <%= @user.phone %></li>
    </ul>
    </p>
  </section>
  <section class="user_options_wrapper">
    <a> Edit Profile</a>
    <a> VIew Friends </a>
    <%= link_to "View Events", user_events_path(@user.id) %>
    <% if @organization != nil%>
      <%= link_to "View Organization", user_organizations_path(@user.id) %>
    <% else %>
      <%= link_to "Join a Organization", organizations_path %>
    <% end %>
  </section>
</section>

<h1 class="profile_title">Your Created events</h1>
<% @events_created.each do |event| %>
  <section class="user_events_wrapper">
    <section class="events_upper">

    </section>
    <section class="events_details">
      <i class="far fa-square fa-8x"></i>
      <section class="event_text">
        <h3><%= link_to event.name, event_path(event.id) %></h3>
        <%= event.description %>
      </section>
    </section>
    <section class="events_down">

    </section>
  </section>
<% end %>

